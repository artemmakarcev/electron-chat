{
  "name": "electron-chat",
  "version": "1.0.0",
  "description": "electron react js chat",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "watch": "webpack --config webpack.common.js --watch",
    "build": "webpack --config webpack.prod.js",
    "pack": "electron-builder --dir --config electron-builder.json",
    "dist": "electron-builder --config electron-builder.json",
    "make:linux": "electron-builder --linux --config electron-builder.json",
    "make:macos": "electron-builder --mac --config electron-builder.json",
    "make:win": "electron-builder --win --x64 --config electron-builder.json",
    "prettier": "prettier --write src/js/**/*.js && prettier --write src/js/**/*.scss"
  },
  "author": "Artem Makarcev",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "dotenv-webpack": "^7.1.0",
    "electron": "^23.1.0",
    "electron-builder": "^24.13.3",
    "electron-reload": "^2.0.0-alpha.1",
    "node-loader": "^2.0.0",
    "webpack-merge": "^5.10.0"
  },
  "dependencies": {
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@popperjs/core": "2.11.8",
    "@reduxjs/toolkit": "^1.8.1",
    "babel-loader": "^8.2.5",
    "bootstrap": "^5.1.3",
    "css-loader": "^6.7.1",
    "firebase": "^7.19.1",
    "firestore": "^1.1.6",
    "luxon": "^3.4.4",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-hook-form": "^7.31.2",
    "react-redux": "^8.0.1",
    "react-router-dom": "^6.3.0",
    "redux": "^4.2.0",
    "redux-devtools-extension": "^2.13.9",
    "redux-thunk": "^2.4.1",
    "sass": "^1.50.1",
    "sass-loader": "^12.6.0",
    "style-loader": "^3.3.1",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2"
  }
}
