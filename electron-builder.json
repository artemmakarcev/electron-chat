{
  "productName": "Chat App",
  "appId": "com.makarcev4.chatapp",
  "files": [
    "build/**/*",
    "assets/**/*",
    "utils/**/*",
    "index.html",
    "splash.html",
    "splash.css",
    "main.js",
    "preload.js"
  ],
  "mac": {
    "category": "public.app-category.developer-tools",
    "icon": "assets/icons/app_logo.png",
    "hardenedRuntime": true,
    "gatekeeperAssess": false
  },
  "dmg": {
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 430,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ]
  },
  "win": {
    "icon": "assets/icons/app_logo.png",
    "target": ["nsis"]
  },
  "linux": {
    "target": ["deb", "rpm", "AppImage"],
    "category": "Development"
  }
}
